<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="236.0" prefWidth="574.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.dep12.client.controller.MainViewController">
   <children>
      <Label layoutX="30.0" layoutY="30.0" text="Simple Protocole App">
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
      </Label>
      <VBox layoutX="30.0" layoutY="72.0" spacing="10.0">
         <children>
            <HBox>
               <children>
                  <VBox spacing="10.0">
                     <children>
                        <HBox>
                           <children>
                              <Label prefHeight="23.0" prefWidth="51.0" text="ID :" />
                              <TextField fx:id="txtId" prefHeight="24.0" prefWidth="270.0" />
                           </children>
                        </HBox>
                        <HBox>
                           <children>
                              <Label text="NAME :" />
                              <TextField fx:id="txtName" prefHeight="13.0" prefWidth="276.0" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <Button fx:id="btnSendCustomer" mnemonicParsing="false" onAction="#btnSendCustomerOnAction" prefHeight="58.0" prefWidth="175.0" text="SEND CUSTOMER" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <TextField fx:id="txtmsg" prefHeight="24.0" prefWidth="318.0" />
                  <Button fx:id="btnSendMsg" mnemonicParsing="false" onAction="#btnSendmsgOnAction" prefHeight="24.0" prefWidth="166.0" text="SEND MESSAGE" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <TextField fx:id="txtBrowse" prefHeight="24.0" prefWidth="315.0" />
                  <Button fx:id="btnBrowse" mnemonicParsing="false" onAction="#btnBrowse" text="BROWSE" />
                  <Button fx:id="btnSendFile" mnemonicParsing="false" onAction="#btnSendFile" text="SEND FILE" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
